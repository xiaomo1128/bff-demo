{
  "compilerOptions": {
    "target": "ES2022",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["typings","node_modules"],
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["interface/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}